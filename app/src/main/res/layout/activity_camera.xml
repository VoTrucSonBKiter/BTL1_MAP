<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.example.myapplication.CameraActivity">

    <!-- PreviewView để hiển thị luồng video từ camera -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/midContainer" />

    <!-- Middle Button Container -->
    <LinearLayout
        android:id="@+id/midContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnInfo"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/info"
            android:textStyle="bold"
            android:background="@drawable/rounded_white_button"
            android:padding="12dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/btnPractice"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/practice"
            android:textStyle="bold"
            android:background="@drawable/rounded_white_button"
            android:padding="12dp"
            android:layout_marginEnd="20dp"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/submitContainer"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:background="@drawable/rounded_but"
                android:gravity="center"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/btnDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doc"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="-15dp"/>
        </FrameLayout>

        <!-- Nút bật/tắt camera -->
        <Button
            android:id="@+id/button_toggle_camera"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/turn_on_camera"
            android:textStyle="bold"
            android:background="@drawable/rounded_white_button"
            android:padding="12dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <!-- Bottom Container with Background -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBottomLeft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:contentDescription="@string/contentDes"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/btnChooseDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/homepage"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:layout_marginEnd="35dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>