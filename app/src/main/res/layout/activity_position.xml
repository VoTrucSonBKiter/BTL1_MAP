<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".PositionActivity">

    <!-- Khu vực hiển thị mô hình 3D -->
    <com.google.ar.sceneform.ArSceneView
        android:id="@+id/arSceneView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Joystick trái -->
    <FrameLayout
        android:id="@+id/joystickLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/joystick_background"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/joystickLeftKnob"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/joystick_knob" />
    </FrameLayout>

    <!-- Joystick phải -->
    <FrameLayout
        android:id="@+id/joystickRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/joystick_background"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/joystickRightKnob"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/joystick_knob" />
    </FrameLayout>

    <!-- 4 ImageView in the left top column -->
    <ImageView
        android:id="@+id/ivTop1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/contentDes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/ivTop2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/contentDes"
        app:layout_constraintTop_toBottomOf="@id/ivTop1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/ivTop3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/contentDes"
        app:layout_constraintTop_toBottomOf="@id/ivTop2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/ivTop4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/contentDes"
        app:layout_constraintTop_toBottomOf="@id/ivTop3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>


    <!-- Bottom Container with Background -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBottomLeft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/contentDes"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/btnChooseDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/homepage"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:layout_marginEnd="35dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>